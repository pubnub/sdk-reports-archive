{
    "name": "@pubnub/sdk-reports-archive",
    "description": "Tool to parse ATF reports and generate manifests for SDK Feature Support App",
    "version": "0.0.1",
    "private": "true",
    "scripts": {
        "build": "npm run fetch:specifications && npm run build:manifest",
        "fetch:specifications": "rm -rf ./specifications && git clone --depth 1 https://github.com/pubnub/sdk-specifications.git ./specifications",
        "build:manifest": "ts-node src/index.ts"
    },
    "dependencies": {
        "@cucumber/gherkin": "^21.0.0",
        "@cucumber/messages": "^17.1.0",
        "@octokit/rest": "^18.12.0",
        "@xmldom/xmldom": "^0.8.0",
        "adm-zip": "^0.5.9",
        "simple-git": "^2.48.0",
        "ts-node": "^10.2.1",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.34",
        "@types/node": "^16.9.1",
        "prettier": "^2.2.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false,
        "tabWidth": 4,
        "printWidth": 120
    }
}
